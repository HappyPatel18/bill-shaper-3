    <title>Billshaper</title>
  </head>
  <body>
    
<section class="container ">
  <aside>
    <div class="sidebar-top">
      <div class="logo">
        <img src="../img/logo.png" alt="logo" />
      </div>
      <div class="close" id="close">
        <span class="material-icons-sharp">
          close
          </span>
      </div>
    </div>
    <div id="sidebar" class="sidebar">
      <a href="/home" class="active">
        <span class="material-icons-sharp">
          grid_view
          </span>
          <h3>Dashboard</h3>
      </a>
      <a href="/users/upload" class="">
        <span class="material-icons-sharp">
          receipt
            </span>
          <h3>Lower a new bill</h3>
      </a>
      <a href="/users/getMultipleFiles">
        <span class="material-icons-sharp">
          receipt_long
          </span>
          <h3>Manage payments and notification</h3>
      </a>
      
      <div class="sidebarBottom">
        <a href="#">
          <span class="material-icons-sharp">
            help_outline
            </span>
            <h3>Help</h3>
        </a>
        <a href="#">
          <span class="material-icons-sharp">
            contact_support
            </span>
            <h3>Get Help</h3>
        </a>
        <a href="#">
          <span class="material-icons-sharp">
            list_alt
            </span>
            <h3>Read Teams</h3>
        </a>
        <a href="/logout">
          <span class="material-icons-sharp">
            logout
            </span>
            <h3>Sign Out</h3>
        </a>
      </div>
    </div>
  </aside>
  <main class="mainContent">

    <div class="content">
        

        {{#if message}}
                  <div class="alert alert-success">
                      {{message}}
                  </div>
              {{/if}}

        <div class="datatable">
          <table>
            <thead>
            <tr>
                    <th>Sr.Number</th>
                    <th>Bill Name</th>
                    <th>Service Provider</th>
                    <th>Amount Saved</th>
                    <th>Status</th>
                  </tr>
            </thead>
           <tbody>
                  {{#each records}}
                  <tr>
                    <td>{{@index}}</td>
                    <td><a href="/{{this.filepath}}">{{ this.filename }}</a></td>
                    <td>{{this.serviceprovider}}</td>
                    <td>${{this.filesavedamount}}</td>
                    <td>{{this.filestatus}}</td>
                    {{!-- <td>{{ author}}</td> --}}

                  </tr>
                  {{/each}}
                </tbody>

                {{!-- pending,processing,accepted,rejected,completed. --}}

          </table>
        </div>
    </div>
    <div class="content">
        

        {{#if message}}
                  <div class="alert alert-success">
                      {{message}}
                  </div>
              {{/if}}

        <div class="datatable">
          <table>
            <thead>
            <tr>
                    <th>Service Address</th>
                    <th>Account Number</th>
                    <th>Service Provider</th>
                    <th>Amount Saved</th>
                    <th>Status</th>
                  </tr>
            </thead>
           <tbody>
                  {{#each records}}
                  <tr>
                    <td>{{@index}}</td>
                    <td><a href="/{{this.filepath}}">{{ this.filename }}</a></td>
                    <td>{{this.serviceprovider}}</td>
                    <td>${{this.filesavedamount}}</td>
                    <td>{{this.filestatus}}</td>
                    {{!-- <td>{{ author}}</td> --}}

                  </tr>
                  {{/each}}
                </tbody>

                {{!-- pending,processing,accepted,rejected,completed. --}}

          </table>
        </div>
    </div>
  </main>

  <div class="mobileHeader">
    <div class="logo">
      <img src="./img/logo.png" alt="logo" />
    </div>
    <div class="menutogler" id="menubtn">
      <span class="material-icons-sharp">
        menu
        </span>
    </div>
  </div>
</section>

<script>
            $(document).ready(function() {
                $("#user_search").on("keyup", function() {
                  console.log("Value Changed")
                    var value = $(this).val().toLowerCase();
                    $("#users tr").filter(function() {
                        $(this).toggle($(this).text()
                        .toLowerCase().indexOf(value) > -1)
                    });
                });

                function getComboA(id){
                    console.log(id);
                }


                $("select").on("change", function () {
                  var id = $(this).attr("id");
                  var fileStatus = this.value;
                  $.ajax({
                    url: "http://localhost:8080/users/updateFileStatus",
                    type: "POST",
                    data: {
                      id: id,
                      fileStatus: fileStatus,
                    },
                    dataType: "json",
                    success: function (result) {
                      console.log(result)
                    },
                  });
        });

            });

        </script>
        

<script src="/js/main.js"></script>
    </body>
   </html>

